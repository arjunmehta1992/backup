<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.imageretrivegallary.Home" >

    <RelativeLayout
        android:id="@+id/Header_path"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="#5BCDB8" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Footer_path"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#5BCDB8" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Box_path"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Header_path"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:text="Image Name:"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/imageName_path"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="Image name"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:text="Select Image"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/select_img_btn_path"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/setImage_path"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/insertBtn_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setImage_path"
        android:layout_centerInParent="true"
        android:text="InsertImage"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/showListbtn_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setImage_path"
        android:layout_toRightOf="@+id/insertBtn_path"
        android:text="Show Data"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/pathText_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:text="."
        android:layout_below="@+id/showListbtn_path"
        android:textAllCaps="false" />

</RelativeLayout>