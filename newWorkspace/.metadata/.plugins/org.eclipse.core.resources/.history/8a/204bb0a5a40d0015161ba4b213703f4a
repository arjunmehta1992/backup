package com.example.showactivityonce;

import android.content.Intent;
import android.content.SharedPreferences;
import android.os.Bundle;
import android.support.v7.app.ActionBarActivity;

public class ActivityHome extends ActionBarActivity {

	private static final int INSTRUCTIONS_CODE = 0;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		
		SharedPreferences settings = getSharedPreferences("prefs", 0);
		boolean firstRun = settings.getBoolean("firstRun", true);
		if (firstRun) {
			// here run your first-time instructions, for example :
			startActivityForResult(new Intent(ActivityHome.this, Index.class),
					INSTRUCTIONS_CODE);

		}
	}

	@Override
	protected void onActivityResult(int requestCode, int resultCode, Intent data) {

		if (requestCode == INSTRUCTIONS_CODE) {
			SharedPreferences settings = getSharedPreferences("prefs", 0);
			SharedPreferences.Editor editor = settings.edit();
			editor.putBoolean("firstRun", false);
			editor.commit();
		}

	}
}
