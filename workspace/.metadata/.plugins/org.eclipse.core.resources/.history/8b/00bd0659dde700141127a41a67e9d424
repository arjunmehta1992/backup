	public void bindData()
	{
		list_student=helper.getStudentName();
		ArrayAdapter<String> adpt=new ArrayAdapter<String>(DeleteStudent.this,android.R.layout.simple_list_item_1,list_student);
		tv1.setAdapter(adpt);
		tv1.setThreshold(1);
	}
	
	
	

	
}
