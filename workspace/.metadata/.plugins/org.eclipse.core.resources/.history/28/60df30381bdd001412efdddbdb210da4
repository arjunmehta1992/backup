	}

	
	
	private void addDrawerItems() {
	    String[] osArray = { "Android", "iOS", "Windows", "OS X", "Linux" };
	    mAdapter = new ArrayAdapter<String>(this, android.R.layout.simple_list_item_1, osArray);
