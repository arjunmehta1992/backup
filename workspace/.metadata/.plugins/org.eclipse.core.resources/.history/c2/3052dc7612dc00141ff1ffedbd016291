		@Override
		public void onCheckedChanged(RadioGroup group, int checkedId) {
			// TODO Auto-generated method stub
			
			if(checkedId==R.id.male)
			{
				gender="Male";
			}
			if(checkedId==R.id.female)
			{
				gender="Female";
			}
			
			
			
		}
	});
	
	
	
